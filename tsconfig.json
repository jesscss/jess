{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6"],
    "baseUrl": "./packages",
    "strict": true,
    "paths": {
      "jess": ["jess/lib"],
      "@jess/*": ["*/src"]
    }
  },
  "exclude": ["node_modules", "lib"]
}