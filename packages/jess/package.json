{
  "name": "jess",
  "version": "2.0.0-alpha.1",
  "description": "JavaScript Enhanced Style Sheets",
  "main": "lib/index",
  "types": "lib/index",
  "bin": "./bin/cli.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@jesscss/core": "workspace:2.0.0-alpha.1",
    "jess-plugin-less": "workspace:2.0.0-alpha.1",
    "@jesscss/patch-css": "workspace:2.0.0-alpha.1",
    "chalk": "^5.2.0",
    "cosmiconfig": "^8.3.6",
    "lodash-es": "^4.17.21",
    "yargs": "^17.7.1"
  },
  "scripts": {
    "ci": "pnpm build && pnpm test:all",
    "prepublishOnly": "pnpm build && pnpm test:all",
    "benchmark": "node bin/cli.js benchmark/benchmark.jess",
    "build": "pnpm compile",
    "compile": "tsc -b tsconfig.build.json",
    "dev": "tsc -b tsconfig.json -w",
    "test": "cross-env TEST=true vitest --watch=false",
    "test:all": "pnpm benchmark && pnpm test",
    "lint:fix": "eslint --fix '**/*.{js,ts}'",
    "lint": "eslint '**/*.{js,ts}'"
  },
  "author": "Matthew Dean <matthew-dean@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesscss/jess/issues"
  },
  "homepage": "https://github.com/jesscss/jess#readme",
  "devDependencies": {
    "@jesscss/shared": "workspace:^2.0.0-alpha.1",
    "@types/cosmiconfig": "^6.0.0",
    "@types/lodash-es": "^4.17.8"
  },
  "keywords": [
    "css",
    "less",
    "preprocessor",
    "pre-processor",
    "css-in-js",
    "front-end"
  ]
