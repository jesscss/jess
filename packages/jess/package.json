{
  "name": "jess",
  "version": "1.0.0",
  "description": "JavaScript Enhanced Style Sheets",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@jess/parser": "^1.0.0-alpha.0"
  },
  "scripts": {
    "ci": "yarn build && yarn test",
    "prepublishOnly": "yarn build",
